
/* fetching only unique cusomer id */
select distinct customer_id from `coursera-activity-2025.customer_data.customer_address`;
/* text string*/

select length(country) as letters_in_country from `coursera-activity-2025.customer_data.customer_address`;

/* getting only string length greater than 2*/

select country  from `coursera-activity-2025.customer_data.customer_address` where length(country) >2;
/* use substr*/
select distinct customer_id from `coursera-activity-2025.customer_data.customer_address` where substr(country, 1 ,2)='US';
/* trim */
select distinct customer_id from `coursera-activity-2025.customer_data.customer_address` where trim(state)='OH'

/* Sort data by one column */
SELECT * FROM projectID.movie_data.movies ORDER BY `Release Date` DESC;
/* Filter and sort data in descending order */
SELECT * FROM projectID.movie_data.movies WHERE Genre = "Comedy" AND Revenue > 300000000
ORDER BY `Release Date` DESC;
/* concat function*/
SELECT
  usertype,
  CONCAT (start_station_name," to ", end_station_name) AS route, 
  COUNT (*) as num_trips,
  ROUND(AVG(cast(tripduration as int64)/60),2) AS duration 
FROM 
  `bigquery-public-data.new_york.citibike_trips`
GROUP BY
  start_station_name, end_station_name, usertype 
ORDER BY 
  num_trips DESC 
LIMIT 10
